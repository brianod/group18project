<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollView1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        tools:context=".AddEditTaskActivity">

        <EditText
            android:id="@+id/edit_text_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Title"
            android:inputType="text" />

        <EditText
            android:id="@+id/edit_text_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Description"
            android:inputType="textMultiLine" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Due Date"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <EditText
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:focusable="false"
            android:hint="DD/MM/YYYY"
            android:inputType="date" />

        <EditText
            android:id="@+id/edit_text_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Group"
            android:inputType="text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Priority"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <RatingBar
            android:id="@+id/priority_stars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:numStars="5"
            android:saveEnabled="true"
            android:stepSize="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Remind Me"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp">

            <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/radio_1_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 day before due date" />

                <RadioButton
                    android:id="@+id/radio_3_days"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3 days before due date" />

                <RadioButton
                    android:id="@+id/radio_7_days"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7 days before due date" />

                <RadioButton
                    android:id="@+id/radio_10_days"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10 days before due date" />

                <RadioButton
                    android:id="@+id/radio_14_days"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="14 days before due date" />
            </RadioGroup>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Attachments"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <TextView
            android:id="@+id/attachmentFilename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textAppearance="@android:style/TextAppearance.Small" />

        <LinearLayout
            android:id="@+id/LinearLayout02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/clear_attachments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="onClearClicked"
                android:text="Clear"></Button>

            <Button
                android:id="@+id/add_attachment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="onImageGalleryClicked"
                android:text="Add Attachment"></Button>

            <Button
                android:id="@+id/add_from_camera"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="onTakePhotoClicked"
                android:text="Camera"></Button>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Location"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <fragment
            android:id="@+id/autocomplete_fragment"
            android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Remind Me"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp">

            <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/radio_50m"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Within 50 meters" />

                <RadioButton
                    android:id="@+id/radio_100m"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Within 100 meters" />

                <RadioButton
                    android:id="@+id/radio_500m"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Within 500 meters" />

                <RadioButton
                    android:id="@+id/radio_1km"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Within 1000 meters" />
            </RadioGroup>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>